using System;
using System.Security.Claims;

namespace App
{
    internal class Programm
    {
        static void Main(string[] args)
        {
            int matrixSize = 4;
            int[,] array = new int[matrixSize,matrixSize];
            Random random = new Random();
            int minimumRandomNumber = 1;
            int maximumRandomNumber = 9;
            int rowNumber = 2;
            int columnNumber = 1;
            int summResult = 0;
            int multiplyResult = 1;

            for (int i = 0; i < matrixSize; i++)
            {
                for (int j = 0; j < matrixSize; j++)
                {
                    array[i,j] = random.Next(minimumRandomNumber, maximumRandomNumber);
                }
            }

            for (int i = 0; i < matrixSize; i++)
            {
                for (int j = 0; j < matrixSize; j++)
                {
                    if (i == rowNumber-1)
                    {
                        summResult += array[i, j];
                    }
                    if (j == columnNumber-1)
                    {
                        multiplyResult *= array[i, j];
                    }

                    Console.Write(array[i,j] + " ");
                }
                Console.WriteLine();
            }

            Console.WriteLine($"Summ: {summResult}");
            Console.WriteLine($"Multiply: {multiplyResult}");
        }
    }
}
