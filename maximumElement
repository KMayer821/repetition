using System;
using System.Security.Claims;

namespace App
{
    internal class Programm
    {
        static void Main(string[] args)
        {
            int matrixSize = 10;
            int[,] array = new int[matrixSize,matrixSize];
            Random random = new Random();
            int minimumRandomNumber = 1;
            int maximumRandomNumber = 10;
            int maximumElementOfMatrix = 0;

            for (int i = 0; i < matrixSize; i++)
            {
                for (int j = 0; j < matrixSize; j++)
                {
                    array[i,j] = random.Next(minimumRandomNumber, maximumRandomNumber);
                }
            }

            for (int i = 0; i < matrixSize; i++)
            {
                for (int j = 0; j < matrixSize; j++)
                {
                    Console.Write(array[i,j] + " ");

                    if (array[i,j] > maximumElementOfMatrix)
                    {
                        maximumElementOfMatrix = array[i,j];
                    }
                }
                Console.WriteLine();
            }

            Console.WriteLine($"Maximum element is {maximumElementOfMatrix}\n\n\n");

            for (int i = 0; i < matrixSize; i++)
            {
                for (int j = 0; j < matrixSize; j++)
                {
                    if (array[i, j] == maximumElementOfMatrix)
                    {
                        array[i, j] = 0;
                    }

                    Console.Write(array[i,j] + " ");
                }
                Console.WriteLine();
            }
        }
    }
}
